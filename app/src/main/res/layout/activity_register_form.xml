<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Registro"
        android:textColor="@color/negro_letra"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
        android:id="@+id/registerImage"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/pororo_laptop"
    android:contentDescription="@string/register_image_desc"
    app:layout_constraintTop_toBottomOf="@id/title"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/registerInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lo sentimos, por ahora la aplicaci칩n no admite registros. Pr칩ximamente podr치s registrarte en tu computadora en el sitio web www.saborcito.com.ar."
        android:textSize="14sp"
        android:textAlignment="center"
        android:padding="12dp"
        android:background="@drawable/rounded_background"
        android:textColor="#444444"
        app:layout_constraintTop_toBottomOf="@id/registerImage"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atr치s"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/registerInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@android:color/white"
        android:textColor="@color/azul"
        app:strokeColor="@color/azul"
        app:strokeWidth="1dp"
        app:cornerRadius="50dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
